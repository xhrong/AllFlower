<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.xhr.AllFlower"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout android:id="@+id/tagLayout"  android:layout_width="match_parent" android:layout_height="300dp"></FrameLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <Button
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_random_text"
                android:background="@drawable/button_border"
                android:textColor="@color/white"
                android:textSize="25px"
                android:id="@+id/btnRandom"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#696969"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:id="@+id/lvFlowerName"/>
</LinearLayout>