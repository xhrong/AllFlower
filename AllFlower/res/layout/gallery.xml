<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.iflytek.iFramework.ui.touchgallery.GalleryWidget.GalleryViewPager
            android:id="@+id/gvImageViewer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"/>
    <include android:id="@+id/galleryTopLayout"
             layout="@layout/top_gallery"/>

    <RelativeLayout android:layout_width="match_parent"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_alignParentBottom="true"
                      android:layout_height="wrap_content">
            <include android:id="@+id/galleryFooterLayout"
                     android:layout_centerInParent="true"
                     layout="@layout/footer_gallery"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>